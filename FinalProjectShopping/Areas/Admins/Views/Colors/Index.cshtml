@model IEnumerable<FinalProjectShopping.Models.Color>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<button class="btn btn-outline-grey">
    @Html.ActionLink("Create New", "Create")
</button>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                <h4>@Html.DisplayNameFor(model => model.color_name)</h4>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <h6>@Html.DisplayFor(modelItem => item.color_name)</h6>
                </td>
                <td>
                    <button class="btn btn-success btn-sm">@Html.ActionLink("Edit", "Edit", new { id = item.color_id })</button>
                    <button class="btn btn-danger btn-sm">@Html.ActionLink("Delete", "Delete", new { id = item.color_id })</button>
                </td>
            </tr>
        }
    </tbody>

</table>
